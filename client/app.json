{
  "expo": {
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow GoneChatting to access your camera."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Gone Chatting to use Face ID."
        }
      ]
    ],
    "name": "Gone Chatting",
    "slug": "goneChattingNative",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "buildNumber": "1.2",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need to access your location for better app functionality."
      },
      "bundleIdentifier": "com.jalewis1221.goneChattingNative"
    },
    "android": {
      "permissions": [
        {
          "name": "android.permission.ACCESS_FINE_LOCATION",
          "reason": "We need to access your location for better app functionality."
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
